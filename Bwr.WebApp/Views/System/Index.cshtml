    <script type="text/javascript">
        $(function () {
            $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                var url = $(e.target).attr('data-indexurl');
                var id = e.target.href.split("#")[1];
                $('#' + id).load(url);
            })
        });
    </script>
